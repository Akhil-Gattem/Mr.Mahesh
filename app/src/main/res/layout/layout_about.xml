<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded_corners">

    <TextView
        android:id="@+id/title_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/snomelt"
        android:paddingHorizontal="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="2dp"
        android:text="@string/tools_used"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/title_one_summary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/title_one_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbit"
        android:gravity="start"
        android:paddingHorizontal="10dp"
        android:paddingBottom="48dp"
        android:text="@string/tools"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/title_one"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/long_fox"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:text="@string/disclaimer"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/line"
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@+id/disclaimer"
        app:layout_constraintTop_toBottomOf="@+id/title_one_summary" />


</androidx.constraintlayout.widget.ConstraintLayout>